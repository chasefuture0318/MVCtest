@model MVCTest.Models.Order
@{
    ViewBag.Title = "UpdateData";
}

<h2>UpdateData</h2>
<br />

<form method="post" action="/Home/UpdateData">
    <div class="form-group row">
        <label for="inputOrderID" class="col-sm-2">訂單編號</label>
        <div class="col-sm-10">
            <input type="text" id="inputOrderID" name="OrderID" class="form-control" value="@Model.OrderID" readonly />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputCustomerID" class="col-sm-2">顧客名稱</label>
        <div class="col-sm-10">
            <input type="text" id="inputCustomerID" name="CustomerID" class="form-control" value="@Model.CustomerID" />
        </div>
    </div>
    <input class="btn btn-default" type="submit" value="修改" />
</form>

